<!--pages/index/index.wxml-->
<text hidden="true">pages/index/index.wxml</text>
<map bindmarkertap="markertap"></map>
<text data-test="{{msg}}">{{msg}}</text>
<text style="color:{{color}}">{{a+b}}</text>
<text>{{[1,2,3]}}</text>
<text wx:if="{{show}}">{{[4,2,3]}}</text>
<view wx:for="{{array}}" wx:key="id">
  {{item.id}}:{{item.value}}
</view>
<view wx:for="{{array}}" wx:for-index="idx" wx:for-item="itemName" wx:key="id">
  {{idx}}:{{itemName.value}}
</view>
<block wx:for="{{array}}" wx:key="id" bindtap="maopao">
  <view>{{index}}:</view>
  <view>{{item.value}}</view>
</block>
<switch wx:for="{{objectArray}}" wx:key="unique">{{item.id}}</switch>
<button bindtap="switch">Switch</button>
<button bindtap="addToFront">Add to the front</button>

<switch wx:for="{{numberArray}}" wx:key="*this">{{item}}</switch>
<button bindtap='addNumberFront'>Add number to the front</button>
<template name="msgImag">
  <view>
    <text>{{index}}:{{msg}}</text>
    <text>time:{{time}}</text>
  </view>
</template>
<template name="a1">
  <view>
    a1
  </view>
</template>
<template name="a2">
  <view class="a">
    a2
  </view>
</template>
<template is="msgImag" data="{{...item}}"/>
<block wx:for="{{[1,2,3,4]}}" wx:key="*this">
  <template is="{{item % 2 == 0 ? 'a'+1 : 'a' + 2}}"/>
</block>
<import src="../logs/index.wxml" />
<!-- 引入某个template is来指定 -->
<template is="log" data="{{text:log}}"/>
<!-- 引入整个模块到当前位置 -->
<include src="../logs/index.wxml"/>
<tag prop-a="{{propa}}" prop-b="{{propb}}" bind:myevent="get_emit" class="outClass" bindtap="gang" id="tag">
  <view slot="first">我是外部父组件的嵌入slot:first</view>
  <view slot="sec">我是外部父组件的嵌入slot:sec</view>
</tag>
